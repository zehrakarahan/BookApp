@{
    Layout = "_ModalLayout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
@model WebApp.Models.Auth.LoginModel

<style>
    .background-cover {
        background-image: url('/images/realistic-neon-lights-background_23-2148907367.jpg');
        background-size: cover;
        background-position: center;
    }

    .form-container {
        position: relative;
    }

    .form-footer {
        margin-top: 20px;
        text-align: center;
    }

        .form-footer a {
            color: #007bff;
            text-decoration: none;
        }

            .form-footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="d-flex align-items-center justify-content-center vh-100 background-cover">
    <form class="w-50 m-5 p-3 shadow mx-auto form-container" asp-action="Login" asp-controller="Auth" method="post">
        <div class="mb-3">
            <label style="color: white;" for="Email" class="form-label">Username:</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label style="color:whitesmoke" for="Password" class="form-label">Password:</label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>

        <div class="mb-3">
            <button class="btn btn-primary w-100">Login</button>
        </div>

        <div class="form-footer">
            <p style="color:azure">Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a></p>
        </div>
    </form>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
